<div class="media-toolbar wp-filter">
    <div class="media-toolbar-secondary">
        <h2 class="media-attachments-filter-heading screen-reader-text">Filtrer les médias</h2>
        <div class="view-switch media-grid-view-switch">
            <a href="#" class="view-grid current" aria-current="page">
                <span class="screen-reader-text">Vue grille</span>
            </a>
        </div>
        <label for="media-attachment-filters" class="screen-reader-text">Filtrer par type</label>
        <select id="media-attachment-filters" class="attachment-filters">
            <option value="all">Tous les médias</option>
            <option value="image">Images</option>
            <option value="audio">Sons</option>
            <option value="video">Vidéos</option>
            <option value="pdf">PDF</option>
            <option value="unattached">Non attachés</option>
        </select>
        <button type="button" class="button media-button button-primary button-large delete-selected-button hidden" disabled="disabled">Supprimer définitivement</button>
        <label for="media-attachment-date-filters" class="screen-reader-text">Filtrer par date</label>
        <select id="media-attachment-date-filters" class="attachment-filters">
            <option value="all">Toutes les dates</option>
            {% for month in months %}
                <option value="{{month.formatted_date_key}}">{{month.formatted_date}}</option>
            {% endfor %}
        </select>
        <span class="spinner"></span>
    </div>
    <div class="media-toolbar-primary search-form">
        <label for="media-search-input" class="media-search-input-label">Rechercher</label>
        <input type="search" id="media-search-input" class="search" />
    </div>
    <div class="media-bg-overlay" style="display: none;"></div>
</div>