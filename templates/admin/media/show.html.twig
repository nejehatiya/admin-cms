{% extends 'base.html.twig' %}

{% block title %}Images{% endblock %}

{% block body %}
    <h1>Images</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ image.id }}</td>
            </tr>
            <tr>
                <th>Url_image</th>
                <td>{{ image.urlImage }}</td>
            </tr>
            <tr>
                <th>Name_image</th>
                <td>{{ image.nameImage }}</td>
            </tr>
            <tr>
                <th>Description_image</th>
                <td>{{ image.descriptionImage }}</td>
            </tr>
            <tr>
                <th>Alt_image</th>
                <td>{{ image.altImage }}</td>
            </tr>
            <tr>
                <th>Date_add</th>
                <td>{{ image.dateAdd ? image.dateAdd|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Date_update</th>
                <td>{{ image.dateUpdate ? image.dateUpdate|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Height</th>
                <td>{{ image.height }}</td>
            </tr>
            <tr>
                <th>Width</th>
                <td>{{ image.width }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_media_index') }}">back to list</a>

    <a href="{{ path('app_media_edit', {'id': image.id}) }}">edit</a>

    {{ include('media/_delete_form.html.twig') }}
{% endblock %}
