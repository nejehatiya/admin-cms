{% extends 'base.html.twig' %}

{% block title %}Menu{% endblock %}

{% block body %}
    <h1>Menu</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ menu.id }}</td>
            </tr>
            <tr>
                <th>Name_menu</th>
                <td>{{ menu.nameMenu }}</td>
            </tr>
            <tr>
                <th>Menu_content</th>
                <td>{{ menu.menuContent }}</td>
            </tr>
            <tr>
                <th>Status_menu</th>
                <td>{{ menu.statusMenu ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Date_add</th>
                <td>{{ menu.dateAdd ? menu.dateAdd|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Date_update</th>
                <td>{{ menu.dateUpdate ? menu.dateUpdate|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_menu_index') }}">back to list</a>

    <a href="{{ path('app_menu_edit', {'id': menu.id}) }}">edit</a>

    {{ include('menu/_delete_form.html.twig') }}
{% endblock %}
