{% set post_content_element = json_order_content is defined ? json_order_content : post.post_order_content|json_decode %}
{% set mode_affichage = mode_affichage is defined ? mode_affichage : 'full' %}
{% if (post_content_element|length) > 0 and post_content_element != null %}
	{% for element in post_content_element %}
		{% set model_content = element.json_data is iterable ? element.json_data : element.json_data|json_decode %}
		{% if element.is_model %}
			{{ renderModalView(element, post_type,model_content)|raw }}
		{% endif %}
	{% endfor %}
{% endif %}
