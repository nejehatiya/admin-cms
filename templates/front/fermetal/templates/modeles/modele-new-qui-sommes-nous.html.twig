{% set device = getDeviceAgent() %}
{% set titre_balise = titre_balise is defined and titre_balise|length > 0 ? titre_balise : 'h2' %}
{% set pre_titre_balise = pre_titre_balise is defined and pre_titre_balise|length > 0 ? pre_titre_balise : 'p' %}
{% set mode_template = mode_template is defined and mode_template|length > 0 ? mode_template : 'mode-1-3' %}


{% set image_1 = image is defined ? image |json_decode : '' %}
{% set image_2 = image_mobile is defined ? image_mobile |json_decode : '' %}
{% set url_video = url_video is defined and url_video|length > 0 ? url_video : '' %}
{% set altImage = get_alt_image(image_1) %}
{% set altImageMobile = get_alt_image(image_2) %}
<section
	class="section-qui-somme-nous d-flex align-center flex-wrap mb-80 {{mode_template}}  {% if is_background is defined and is_background  %} background-color {% endif %}  {% if mode_affichage is defined and mode_affichage == 'with-sidebar' %} qui-somme-nous-page {% endif %}">
	{#% if mode_template == "mode-1-2" or mode_affichage is defined and mode_affichage == "with-sidebar" %#}
	<div class="container">
		{{ include('front/fermetal/templates/modeles/partials/qui-somme-nous-title.html.twig') }}
	</div>
	{#% endif %#}
	<div class="container">
		<div class="{% if image_1 is empty and url_video|length == 0 and image_2 is empty %} text-dexscription-full {% endif %}content-img-text d-flex justify-space-between {% if device == 'mobile' %} align-center {% endif %} {% if image_style_1 is defined and image_style_1 == 'left' %} left {% else %} right {% endif %}">
			{{ include('front/fermetal/templates/modeles/partials/qui-somme-nous-images.html.twig') }}
			{{ include('front/fermetal/templates/modeles/partials/qui-somme-nous-description.html.twig') }}
		</div>
	</div>
	{#% if mode_template == "mode-1-2" or mode_affichage is defined and mode_affichage == "with-sidebar" %#}
	{{ include('front/fermetal/templates/modeles/partials/qui-somme-nous-button.html.twig') }}
	{#% endif %#}
</section>
