{% set titre_1_balise = titre_1_balise is defined and titre_1_balise|length > 0 ? titre_1_balise : 'h2' %}
<section class="modeles-contactez-nous model-appelze-nous">
	<div class="container">
		<div class="content-text d-flex align-center justify-center direction-column">
			{% if titre_1 is defined and titre_1|length > 0 %}
				<div class="titre">
					<{{titre_1_balise}} class="h2">{{titre_1 is defined ? urldecode(titre_1): '' }}</{{titre_1_balise}}>
				</div>
			{% endif %}
			<div class="description text-center">
				{{description_1 is defined ? urldecode(description_1)|raw : '' }}
			</div>
			<a href="{{href_button_1 is defined ? urldecode(href_button_1) : '' }}" class="d-flex justify-center align-center">
				{{text_button_1 is defined ? urldecode(text_button_1): '' }}
			</a>
		</div>
	</div>
</section>
