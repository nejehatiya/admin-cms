{% set device = getDeviceAgent() %}
{% set sous_titre_balise = sous_titre_balise is defined ? sous_titre_balise : 'span' %}
{% set titre_balise = titre_balise is defined ? titre_balise : 'h2' %}
{% set titre = titre is defined and titre ? urldecode(titre) : '' %}
{% set sous_titre = sous_titre is defined and sous_titre ? urldecode(sous_titre) : '' %}
{% set image_1 = image_1 is defined ? image_1 |json_decode : '' %}
{% set altImage = get_alt_image(image_1) %}
<section class="galeries-images  mb-80 {% if mode_affichage is defined and mode_affichage == 'with-sidebar'  %} galeries-images-pages {% endif %}">
	<div class="container">
		<div class="row d-flex justify-space-between">
			<div class="item first">
				<div class="text d-flex justify-center direction-column">
					{% if (sous_titre_inclut_h2 is defined and sous_titre_inclut_h2) and (titre_balise == 'h2') and (titre is defined and titre|length > 0)  %}
						<{{titre_balise}} class="titre d-flex direction-column">
							{% if sous_titre is defined and sous_titre|length > 0 %}
								<span class="sous_titre">{{sous_titre}}</span>
							{% endif %}
							{{titre}}
						</{{titre_balise}}>
					{% else %}
						{% if sous_titre is defined and sous_titre|length > 0 %}
							<{{sous_titre_balise}} class="sous_titre m-0">{{sous_titre}}</{{sous_titre_balise}}>
						{% endif %}
						{% if titre is defined and titre|length > 0 %}
							<{{titre_balise}} class="titre m-0">{{titre}}</{{titre_balise}}>
						{% endif %}
					{% endif %}
				</div>
				{% if image_1 is not empty and device == 'desktop' %}
					<div class="image image-first lazy" data-bg="{{generate_webp_image(image_1[0].path.full)}}"></div>
				{% endif %}

			</div>
			<div class="galeries d-flex justify-space-between {% if device == 'mobile' %} carousel-galerie-images {% endif %}">
				{% set image_2 = image_2 is defined ? image_2 |json_decode : '' %}
				{% set altImage = get_alt_image(image_2) %}
				{% if image_2 is not empty  %}
					{% if device == 'mobile' %}
						<div>
							<div>
								<div class="item image second lazy" data-bg="{{generate_webp_image(image_2[0].path.full)}}"></div>
							</div>
						</div>
					{% else %}
						<div class="item image second lazy" data-bg="{{generate_webp_image(image_2[0].path.full)}}"></div>
					{% endif %}

				{% endif %}
				{% if device == 'mobile' %}
					<div>
						<div>
						{% endif %}
						<div class="item third d-flex direction-column">


							{% set image_3 = image_3 is defined ? image_3 |json_decode : '' %}
							{% set altImage = get_alt_image(image_3) %}
							{% if image_3 is not empty  %}

								<div class="image item-third-1-3 lazy" data-bg="{{generate_webp_image(image_3[0].path.full)}}"></div>
							{% elseif  image_3 is not empty and device != 'desktop' %}
								<div class="image item-third-1-3" data-lazy="{{generate_webp_image(image_3[0].path.full)}}"></div>
							{% endif %}
							{% set image_4 = image_4 is defined ? image_4 |json_decode : '' %}
							{% set altImage = get_alt_image(image_4) %}
							{% if image_4 is not empty  %}

								<div class="image item-third-2-3 lazy" data-bg="{{generate_webp_image(image_4[0].path.full)}}"></div>
							{% elseif  image_4 is not empty and device != 'desktop' %}
								<div class="image item-third-2-3" data-lazy="{{generate_webp_image(image_4[0].path.full)}}"></div>
							{% endif %}

						</div>
						{% if device == 'mobile' %}
						</div>
					</div>
				{% endif %}
				{% if device == 'mobile' %}
					<div>
						<div>
						{% endif %}

						<div class="item fourth d-flex direction-column">

							{% set image_5 = image_5 is defined ? image_5 |json_decode : '' %}
							{% set altImage = get_alt_image(image_5) %}
							{% if image_5 is not empty  %}

								<div class="image item-fourth-2-3 lazy" data-bg="{{generate_webp_image(image_5[0].path.full)}}"></div>
							{% elseif  image_5 is not empty and device != 'desktop' %}
								<div class="image item-fourth-2-3" data-lazy="{{generate_webp_image(image_5[0].path.full)}}"></div>
							{% endif %}
							{% set image_6 = image_6 is defined ? image_6 |json_decode : '' %}
							{% set altImage = get_alt_image(image_6) %}
							{% if image_6 is not empty  %}
								<div class="image item-fourth-1-3 lazy" data-bg="{{generate_webp_image(image_6[0].path.full)}}"></div>
							{% elseif  image_6 is not empty and device != 'desktop' %}
								<div class="image item-fourth-1-3 lazy" data-bg="{{generate_webp_image(image_6[0].path.full)}}"></div>
							{% endif %}

						</div>
						{% if device == 'mobile' %}
						</div>
					</div>
				{% endif %}
				{% if image_1 is not empty and device == 'mobile' %}
					<div>
						<div>
							<div class="image item  image-first lazy" data-bg="{{generate_webp_image(image_1[0].path.full)}}"></div>
						</div>
					</div>
				{% endif %}

			</div>
		</div>
	</div>
</section>
